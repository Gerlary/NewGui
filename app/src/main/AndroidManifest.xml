<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elk_gui">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Elk_GUI">
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/Theme.Elk_GUI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"> </activity>
        <activity android:name=".quiz.QuizActivity"> </activity>
        <activity android:name=".Camera_activity" />
        <activity android:name=".quiz.Test"/>
        <activity android:name=".quiz.PlaceInfo"/>
        <activity android:name=".quiz.ResultActivity"/>

    </application>

</manifest>